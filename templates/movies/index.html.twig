{% extends "./base.html.twig" %}

{% block body %}
    <div class="w-4/5 m-auto text-center">
        <div class="py-12 border-b border-gray-200">
            <h1 class="text-6xl pt-12 pb-8">
                Movie Reviews 
            </h1>
        </div>
    </div>

  {% if app.user %}

    <div class="mx-auto w-4/5 my-8">
        <a 
            href="/movies/create" 
            class="uppercase border border-gray-500 text-lg py-4 px-6 rounded transition transition-all bg-blue-900 text-white hover:bg-white hover:text-gray-800">
            Add New movie
        </a>
    </div>
    
  {% endif %}

    <div class="md:grid lg:grid-cols-3 gap-20 w-4/5 mx-auto py-15 ">
       
        {% for movie in movies %}
            <div class="text-center pt-8 pb-4">
                <img
                    src="{{ movie.imagePath }}"
                    alt=""
                    class="shadow-xl rounded-md"
                />

                <h2 class="text-blue-1000 font-bold text-3xl py-2">
                    {{ movie.title }}
                </h2>
                <p class="text-base text-blue-1000 pt-4 pb-10 leading-8 font-light">
                    {{ movie.description }}
                </p>

                <a href="/movies/{{ movie.id }}" class="uppercase border border-gray-500 text-gray-600 text-lg py-4 px-12 rounded transition transition-all hover:bg-blue-900 hover:text-white">
                    View
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}